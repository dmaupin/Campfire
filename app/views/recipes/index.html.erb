	</div>

<!-- Recipes -->

<% @recipes.each do |r| %>

	<article>
		<h3>Recipe</h3>
		<h2><%= r.title %></h2><br/>
		<%= image_tag r.img.url %>
		<p><span><%= r.description.html_safe %></span></p>
		<img src="<%= asset_path('icon.svg') %>" class="bug">
		<h3>The Steps:</h3>
		<p><%= r.steps %></p>
		<!-- Ingredients -->
		<h3>The Ingredients:</h3>				
		<% for ingredients in r.ingredients %>
  		<ul>
  			<li><%=h ingredients.item %></li>
  		</ul>
		<% end %>
		<!-- Admin Links -->
		<% if current_user %><br/>
			<div class="adminlinks">
				<p>Admin Tools : </p>
				<%= link_to 'Edit', edit_recipe_path(r)%> | 
				<%= link_to "Delete", r, method: :delete, data: { confirm: "Are you sure?"} %>
			</div>
		<% end %>
	</article>

<% end %>

