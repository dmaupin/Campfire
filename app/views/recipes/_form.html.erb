<%= form_for @recipe do |f| %>

	Title :
	<br/><%= f.text_field :title %>
	<br/>
	Description :
	<br/><%= f.text_area :description, :rows => 3 %>
	<br/>
	Steps :
	<br/><%= f.text_area :steps, :rows => 3 %>
	<br/>
	Photo : <%= f.file_field :img %>
	<br/>
	<br/>
	<div class="fields">
		<%= f.fields_for :ingredients do |builder| %>
			<%= builder.label :item, "Ingredient" %><br/>
			<%= builder.text_field :item %><br/>
		<% end %>
	<%= f.submit "Submit" %>
	</div>
<% end %>
