<!DOCTYPE html>
<html>
<head>
  <title>Campfire</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<img src="<%= asset_path('grain.jpg') %>" class="grain">
<div class="header">
	<img src="<%= asset_path('Campfire_Logo_3a.svg') %>" alt="Campfire Cookery" class="logo">
	<div class="navlinks">
		<a href="/">Home</a>
		<span><a href="/">Info</a></span>
		<% if current_user %>
		<br/>
		<a><%= link_to "New", new_recipe_path, class: 'new' %></a>
		<% end %>
		<br/>
		<% if current_user %>
			<p>Logged in as Admin<br/>
			<%= link_to "Log Out", '/logout' %>
			</p>	
		<% else %>
			<p><%= link_to "Admin", new_session_path %></p>			
		<% end %>
	</div>
</div>

<%= yield %>

</body>
</html>
